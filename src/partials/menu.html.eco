<% renderMenu = (items) => %>
    <ul>
        <% for item in items: %>
            <li<% if item.state: %> class="<%= item.state %>"<% end %>>
				<a href="<%= item.meta.redirect or item.url %>"><%= item.title %></a>
				<%- renderMenu(item.children) if item.state and item.children %>
            </li>
        <% end %>
    </ul>
<% end %>

<nav class="dt-menu">
	<%- renderMenu(item.children) for item in @menuItems when item.state %>
</nav>
