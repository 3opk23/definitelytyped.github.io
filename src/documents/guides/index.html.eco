---
layout: 'content'
title: 'Guides'
---

<div class="ui vertical segment">
	<h1><%- @document.title or @document.name %></a></h1>
</div>

<div class="ui row">
	<ul class="ui list">
		<% for item in @getCollection('guides').sortArray(date: -1): %>
		<a class="item" href="<%= item.url %>"><%- item.title or item.name %></a>
		<%- item.description %>
		</a>
		<% end %>
	</ul>
</div>
